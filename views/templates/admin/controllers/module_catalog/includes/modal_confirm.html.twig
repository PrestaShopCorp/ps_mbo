{% if module.attributes.urls|length >= 1 %}
  {% for module_action, module_url in module.attributes.urls %}
    {% if module_action in ['disable', 'uninstall', 'reset'] %}
      <div id="module-modal-confirm-{{module.attributes.name}}-{{ module_action }}" class="modal modal-vcenter fade" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title module-modal-title">
                {% if module_action == 'disable' %}
                  {{ "Disable module?"|trans({}, 'Modules.Mbo.Modulescatalog') }}
                {% endif %}
                {% if module_action == 'uninstall' %}
                  {{ "Uninstall module?"|trans({}, 'Modules.Mbo.Modulescatalog') }}
                {% endif %}
                {% if module_action == 'reset' %}
                  {{ "Reset module?"|trans({}, 'Modules.Mbo.Modulescatalog') }}
                {% endif %}
              </h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body row">
              <div class="col-md-12">
                <p>
                  {% if module_action == 'disable' %}
                    {{ "You are about to disable %moduleName% module."|trans({'%moduleName%': module.attributes.displayName}, 'Modules.Mbo.Modulescatalog') }}
                    <br>
                    <br>
                    {{ "Your current settings will be saved, but the module will no longer be active."|trans({}, 'Modules.Mbo.Modulescatalog') }}
                  {% endif %}
                  {% if module_action == 'uninstall' %}
                    {{ "You are about to uninstall %moduleName% module."|trans({'%moduleName%': module.attributes.displayName}, 'Modules.Mbo.Modulescatalog') }}
                    <br>
                    {{ module.attributes.confirmUninstall }}
                    <br>
                    <br>
                    {{ "This will disable the module and delete all its files. For good."|trans({}, 'Modules.Mbo.Modulescatalog') }}
                    <br>
                    <label>
                      <input type="checkbox" id="force_deletion" name="force_deletion" data-tech-name="{{module.attributes.name}}"> {{ "Optional: delete module folder after uninstall."|trans({}, 'Modules.Mbo.Modulescatalog') }}
                    </label>
                    <br>
                    <span class="italic red">
                      {{ "This action cannot be undone."|trans({}, 'Modules.Mbo.Modulescatalog') }}
                    </span>
                  {% endif %}
                  {% if module_action == 'reset' %}
                    {{ "You're about to reset %moduleName% module."|trans({'%moduleName%': module.attributes.displayName}, 'Modules.Mbo.Modulescatalog') }}
                    <br>
                    <br>
                    {{ "This will restore the defaults settings."|trans({}, 'Modules.Mbo.Modulescatalog') }}
                    <br>
                    <span class="italic red">
                      {{ "This action cannot be undone."|trans({}, 'Modules.Mbo.Modulescatalog') }}
                    </span>
                  {% endif %}
                </p>
              </div>
            </div>
            <div class="modal-footer">
              <input type="button" class="btn btn-outline-secondary" data-dismiss="modal" value="{{ "Cancel"|trans({}, 'Admin.Actions') }}" />
              {% if module_action == 'disable' %}
                <a
                  class="btn btn-primary uppercase module_action_modal_{{ module_action }}"
                  href="{{ module_url }}"
                  data-dismiss="modal"
                  data-tech-name="{{module.attributes.name}}"
                >
                  {{ "Yes, disable it"|trans({}, 'Modules.Mbo.Modulescatalog') }}
                </a>
              {% endif %}
              {% if module_action == 'uninstall' %}
                <a
                  class="btn btn-primary uppercase module_action_modal_{{ module_action }}"
                  href="{{ module_url }}"
                  data-dismiss="modal"
                  data-tech-name="{{module.attributes.name}}"
                >
                  {{ "Yes, uninstall it"|trans({}, 'Modules.Mbo.Modulescatalog') }}
                </a>
              {% endif %}
              {% if module_action == 'reset' %}
                <a
                  class="btn btn-primary uppercase module_action_modal_{{ module_action }}"
                  href="{{ module_url }}"
                  data-dismiss="modal"
                  data-tech-name="{{module.attributes.name}}"
                >
                  {{ "Yes, reset it"|trans({}, 'Modules.Mbo.Modulescatalog') }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
{% endif %}
